
<article>
  <h3><%= @room.title %> 予約登録</h3>
  <%= form_for @reservation, method: :post, url: reservations_confirm_path do |f| %>
    <%= f.hidden_field :room_id, value: @room.id %>
    <%= f.hidden_field :user_id, value: @current_user.id %>
    <p><%= @room.id %></p>

    <div class="field">               
      <p class="label">料金</p>              
      <div class="control">
        ¥<%= @room.price %>/人
      </div>          
    </div>

    <div class="field">              
      <%= f.label :start, "開始日", class: "label" %>
      <div>
      <%= f.date_field :start, class: "input" %> 
      </div>           
    </div>

    
    <div class="field">
      <%= f.label :end, "終了日", class: "label" %>
      <div>
        <%= f.date_field :end, class: "input" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :num_people, class: "label" %>
      <div>
        <%= f.number_field :num_people, class: "input" %>
      </div>
    </div>

    <div class="field is-grouped is-grouped-centered">
      <div class="control">
        <%= f.submit '確認画面へ' %>
      </div>
    </div>
  <% end %>



</article> 